@model CollectIt.MVC.View.ViewModels.VideoViewModel


<div class="music-box gradient-music mb-3">
    <div class="inbox-p music-text">
        <div class="music-action-box">
            <div>
                @* <button><i class="fa-solid fa-circle-play"></i></button> *@
                <video src="@Model.PreviewAddress" controls="controls" class="">@Model.Name</video>
            </div>
            <div class="d-flex align-items-center music-author-box">
                <div class="d-flex overflow-hidden flex-column justify-content-center">
                    <div class="d-flex align-items-center mb-1">
                        <div class="d-flex align-items-center me-2"></div>
                        <p class="fw-bold music-name m-0">
                            <a asp-controller="Videos" asp-action="Video" asp-route-id="@Model.VideoId"
                               class="d-block overflow-hidden text-nowrap music-name-link text-decoration-none">
                                @Model.Name
                            </a>
                        </p>
                    </div>
                    <div class="d-flex align-items-center">
                        <span class="d-flex overflow-hidden music-author">
                            Автор: @Model.OwnerName
                        </span>
                    </div>
                </div>
            </div>
            <div class="empty w-100"></div>
            <div class="d-flex music-duration">
                <p class="music-name t-w">@Model.Duration</p>
            </div>
        </div>
    </div>
</div>